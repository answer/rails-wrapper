#!/bin/bash

if [ -z "$RACK_ENV" ]; then
  RACK_ENV=$RAILS_ENV
fi
if [ -z "$RACK_ENV" ]; then
  RACK_ENV=development
fi

if [ "$1" = "--docker-detach" ]; then
  opts="-d"
  shift
else
  opts="-it"
fi

pwd=$(pwd)

if [ "$1" = exec ]; then
  if [ -n "$2" ]; then
    app=${pwd#/var/www/apps/}
    app=${app%/*}
    command="/var/www/apps/$app/bin/$2"
    if [ -x "$command" ]; then
      if [ "$2" != "spring" ]; then
        spring server
      fi
      shift
      shift
    else
      command=
    fi
  fi
fi

if [ -z "$command" ]; then
  command="bundle"
fi
command=$command' $@'

docker exec $opts -u devel "$DOCTRL_EXEC_TO" sh -c "cd $pwd && . /home/devel/.profile && RAILS_DEVEL_NAME=$RAILS_DEVEL_NAME RACK_ENV=$RACK_ENV $command" - "$@"
